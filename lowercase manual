//To convert string to lowercase
#include <stdio.h>

int main() {
      char str[100];
    int i=0;
  printf("Enter a string to convert it to lowercase: ");
  gets(str);
   //fgets(str, sizeof(str), stdin);
   
   printf("lowercase:");
   for(int i=0; str[i]!='\0'; i++)
   if(str[i]>='A' && str[i]<='Z')
   printf("%c", str[i]+32);
else
printf("%c", str[i]);
    return 0;
}
