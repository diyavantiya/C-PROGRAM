 //To convert string to uppercase
#include <stdio.h>

int main() {
      char str[100];
    int i=0;
  printf("Enter a string to convert it to uppercase: ");
  gets(str);
   //fgets(str, sizeof(str), stdin);
   
   printf("Uppercase:");
   for(int i=0; str[i]!='\0'; i++)
   if(str[i]>='a' && str[i]<='z')
   printf("%c", str[i]-32);
else
printf("%c", str[i]);
    return 0;
}
