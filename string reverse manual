//To reverse the string
#include <stdio.h>
#include<string.h>
int main() {
  char str[100];
  int i=0;
  printf("Enter a string: ");
  fgets(str, sizeof(str), stdin);
  int l=strlen(str);
  
  printf("Reversed string:");
  for(int i=0; i<l; i++)
    printf("%c", str[l-1-i]);
  
  /* for(int i=l-1; i>=0; i--)
    printf("%c", str[i]);
  */
  return 0;
}
