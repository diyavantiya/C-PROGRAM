// Check whether a given no. is a palindrome or not. e.g. 12321. 

//2 way

#include <stdio.h>

int main()
{
  int num, orignum, rev;
  printf("Enter a no to  be checked for palindrome:");
  scanf("%d", &num);
  orignum=num;
  while(num!=0) {
      int digit=num%10;
      rev=(rev*10)+digit;
      num=num/10;
  }
       if(rev==orignum)
        printf("The no is palindrome\n");
    else
        printf("The no is not palindrome\n");
  
    return 0;
}

//! way
#include <stdio.h>
int main() {
    int a,digit, rem, b[100], isPalindrome = 1, i=0;
    printf("Enter no:");
    scanf("%d", &a);
    digit=a;
    rem=a;
    while(digit!=0) {
        rem=digit%10;
        b[i]=rem;
        digit=digit/10;
        i++;
    }
    for(int j=0; j<i; j++) {
        if(b[j]!=b[i-j-1]) {
            isPalindrome=0;
            break; 
        }  
    }
    if(isPalindrome==1)
        printf("The no is palindrome\n");
    else
        printf("The no is not palindrome\n");
    return 0;
}
